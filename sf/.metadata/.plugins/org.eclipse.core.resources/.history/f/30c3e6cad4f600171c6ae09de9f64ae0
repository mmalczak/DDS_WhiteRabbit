#include "xparameters.h"
#include "xspi.h"
#include "xspi_l.h"
#include "xil_printf.h"


#define SPI_DEVICE_ID       XPAR_SPI_0_DEVICE_ID

int SpiSelfTestExample(u16 DeviceId);

XSpi Spi; /* The instance of the SPI device */

int spi_init(void)
{
	int Status;
	XSpi_Config *ConfigPtr;	/* Pointer to Configuration data */
	ConfigPtr = XSpi_LookupConfig(SPI_DEVICE_ID);
	if (ConfigPtr == NULL) {
		return XST_DEVICE_NOT_FOUND;
	}
	Status = XSpi_CfgInitialize(&Spi, ConfigPtr,
				  ConfigPtr->BaseAddress);
	if (Status != XST_SUCCESS) {
		xil_printf("failure\n\r");
		return XST_FAILURE;
	}
	Status = XSpi_SetOptions(&Spi, XSP_MASTER_OPTION);
	if (Status != XST_SUCCESS) {
		xil_printf("failure\n\r");
		return XST_FAILURE;
	}
	XSpi_Start(&Spi);
	XSpi_IntrGlobalDisable(&Spi);
	Status=XSpi_SetSlaveSelect(&Spi, 1);
	if (Status != XST_SUCCESS) {
		xil_printf("failure\n\r");
		return XST_FAILURE;
	}
}

int main(void)
{

	int Status;

	u8 data_write[3]={0x01, 0x42, 0x42}, data_read[3];



	Status=XSpi_Transfer(&Spi, data_write, data_read, 3);
	if (Status != XST_SUCCESS) {
		xil_printf("failure2\n\r");
		return XST_FAILURE;
	}

	data_write[0]=0x02;
	data_write[1]=0x32;
	data_write[2]=0x01;

	Status=XSpi_Transfer(&Spi, data_write, data_read, 3);
	if (Status != XST_SUCCESS) {
		xil_printf("failure2\n\r");
		return XST_FAILURE;
	}



	xil_printf("skonczyl\n\r");



	return XST_SUCCESS;
}



